function s:iso8859_8.mbtowc(mb)
  let c = a:mb[0]
  if c < 0xa0
    return [1, [c]]
  else
    let wc = self.iso8859_8_2uni[c-0xa0]
    if wc != 0xfffd
      return [1, [wc]]
    endif
  endif
