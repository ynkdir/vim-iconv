endfunction

function s:iso8859_8.wctomb(wc)
  if a:wc < 0x00a0
    return [a:wc]
  elseif a:wc >= 0x00a0 && a:wc < 0x00f8
    let c = self.iso8859_8_page00[a:wc-0x00a0]
  elseif a:wc >= 0x05d0 && a:wc < 0x05f0
    let c = self.iso8859_8_page05[a:wc-0x05d0]
  elseif a:wc >= 0x2008 && a:wc < 0x2018
    let c = self.iso8859_8_page20[a:wc-0x2008]
  endif
  if c != 0
    return [c]
  endif
  throw 'ICONV: RET_ILUNI'
endfunction

